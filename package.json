{
  "name": "url-shortener",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:all": "bun install",
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "cd apps/backend && bun run start:dev",
    "dev:frontend": "cd apps/frontend && bun run dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "cd apps/backend && bun run build",
    "build:frontend": "cd apps/frontend && bun run build",
    "start:backend": "cd apps/backend && bun run start:prod",
    "start:frontend": "cd apps/frontend && bun run start",
    "lint": "cd apps/backend && bun run lint && cd ../frontend && bun run lint",
    "test": "cd apps/backend && bun run test",
    "test:e2e": "cd apps/backend && bun run test:e2e",
    "clean": "rimraf apps/*/dist apps/*/node_modules node_modules",
    "typecheck": "cd apps/backend && bunx tsc --noEmit && cd ../frontend && bunx tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@nestjs/cli": "^11.0.10",
    "@types/express": "^5.0.3",
    "concurrently": "^9.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
